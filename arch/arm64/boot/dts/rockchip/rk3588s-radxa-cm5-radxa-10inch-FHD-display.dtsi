/ {
	compatible = "radxa,rock-5a", "rockchip,rk3588s";

	vcc_lcd1_3v3: vcc-lcd-3v3 {
		status = "okay";
		compatible = "regulator-fixed";
		regulator-name = "vcc_lcd1_3v3";
		regulator-always-on;
		regulator-boot-on;
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		vin-supply = <&vcc3v3_sys>;
	};

	backlight: backlight {
		status = "okay";
		compatible = "pwm-backlight";
		pwms = <&pwm15 0 25000 0>;
		brightness-levels = <
			255 254 253 252 251 250 249 248
			247 246 245 244 243 242 241 240
			239 238 237 236 235 234 233 232
			231 230 229 228 227 226 225 224
			223 222 221 220 219 218 217 216
			215 214 213 212 211 210 209 208
			207 206 205 204 203 202 201 200
			199 198 197 196 195 194 193 192
			191 190 189 188 187 186 185 184
			183 182 181 180 179 178 177 176
			175 174 173 172 171 170 169 168
			167 166 165 164 163 162 161 160
			159 158 157 156 155 154 153 152
			151 150 149 148 147 146 145 144
			143 142 141 140 139 138 137 136
			135 134 133 132 131 130 129 128
			127 126 125 124 123 122 121 120
			119 118 117 116 115 114 113 112
			111 110 109 108 107 106 105 104
			103 102 101 100  99  98  97  96
			 95  94  93  92  91  90  89  88
			 87  86  85  84  83  82  81  80
			 79  78  77  76  75  74  73  72
			 71  70  69  68  67  66  65  64
			 63  62  61  60  59  58  57  56
			 55  54  53  52  51  50  49  48
			 47  46  45  44  43  42  41  40
			 39  38  38  37  37  36  36  35
			 35  34  34  33  33  32  32  31
			 31  30  30  29  29  28  28  27
			 27  26  26  25  25  24  24  23
			 23  22  22  21  21  20  20  0
		>;
		default-brightness-level = <200>;
		enable-gpios = <&gpio4 RK_PA3 GPIO_ACTIVE_HIGH>;
		pinctrl-names = "default";
		pinctrl-0 = <&backlight_en>;
	};
};

&pwm15 {
	status = "okay";
	pinctrl-names = "active";
	pinctrl-0 = <&pwm15m1_pins>;
};

&dsi1 {
	status = "okay";
	rockchip,lane-rate = <1000>;
	#address-cells = <1>;
	#size-cells = <0>;

	dsi1_panel: panel@0 {
		status = "okay";
		compatible ="radxa,display-10hd-N40A";
		reg = <0>;
		backlight = <&backlight>;

		vdd-supply = <&vcc_lcd1_3v3>;
		vccio-supply = <&vcc_1v8_s0>;
		reset-gpios = <&gpio1 RK_PB0 GPIO_ACTIVE_HIGH>;
		pinctrl-names = "default";
		pinctrl-0 = <&dsi1_lcd_rst_gpio>;

		ports {
			#address-cells = <1>;
			#size-cells = <0>;

			port@0 {
				reg = <0>;
				panel_in_dsi1: endpoint {
					remote-endpoint = <&dsi1_out_panel>;
				};
			};
		};
	};

	ports {
		#address-cells = <1>;
		#size-cells = <0>;

		port@1 {
			reg = <1>;
			dsi1_out_panel: endpoint {
				remote-endpoint = <&panel_in_dsi1>;
			};
		};
	};
};

&mipi_dcphy1 {
	status = "okay";
};

&route_dsi1 {
	status = "okay";
	connect = <&vp3_out_dsi1>;
};

&dsi1_in_vp3 {
	status = "okay";
};

&dsi1_in_vp2 {
	status = "disabled";
};

&i2c8 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&i2c8m2_xfer>;
	clock-frequency = <400000>;

	gt9xx: gt9xx@14 {
		status = "okay";
		compatible = "goodix,gt9xx";
		reg = <0x14>;
		pinctrl-names = "default";
		pinctrl-0 = <&gt9xx_gpio>;
		touch-gpio = <&gpio1 RK_PB5 IRQ_TYPE_LEVEL_HIGH>;
		reset-gpio = <&gpio1 RK_PB4 GPIO_ACTIVE_HIGH>;
		max-x = <1200>;
		max-y = <1920>;
		tp-size = <9271>;
	};

	sensor: sensor@19 {
		status = "okay";
		compatible = "gs_sc7a20";
		reg = <0x19>;
		type = <SENSOR_TYPE_ACCEL>;
		irq_enable = <0>;
		pinctrl-names = "default";
		pinctrl-0 = <&sensor_gpio>;
		irq-gpio = <&gpio1 RK_PA4 IRQ_TYPE_EDGE_RISING>;
		poll_delay_ms = <10>;
		layout = <3>;
		reprobe_en = <1>;
	};
};

&pinctrl {

	dsi1-lcd {
		dsi1_lcd_rst_gpio: dsi1-lcd-rst-gpio {
			rockchip,pins = <1 RK_PB0 RK_FUNC_GPIO &pcfg_pull_up>;
		};

		backlight_en: backlight-en {
			rockchip,pins = <4 RK_PA3 RK_FUNC_GPIO &pcfg_pull_up>;
		};
	};

	gt9xx {
		gt9xx_gpio: gt9xx-gpio {
			rockchip,pins =
				<1 RK_PB5 RK_FUNC_GPIO &pcfg_pull_none>,
				<1 RK_PB4 RK_FUNC_GPIO &pcfg_pull_up>;
		};
	};

	sensor {
		sensor_gpio: sensor-gpio {
			rockchip,pins =
				<1 RK_PA4 RK_FUNC_GPIO &pcfg_pull_none>;
		};
	};
};
